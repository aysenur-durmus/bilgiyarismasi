<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SelectActivity">

  <ImageView
      android:id="@+id/foto"
      android:layout_width="180dp"
      android:layout_height="180dp"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="10dp"
      android:adjustViewBounds="true"
      android:background="@drawable/logo2"></ImageView>

  <TextView
      android:id="@+id/konusec"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/foto"
      android:layout_marginStart="30dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="20dp"
      android:text="Konu Seçin"
      android:textColor="#99FFFFFF"
      android:textSize="20sp"></TextView>

  <LinearLayout
      android:id="@+id/layout1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/foto"
      android:layout_centerInParent="true"
      android:layout_marginStart="20dp"
      android:layout_marginTop="50dp"
      android:layout_marginEnd="20dp"
      android:orientation="horizontal">

    <ImageButton
        android:id="@+id/bilimbtn"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/bilim1" />

    <ImageButton
        android:id="@+id/cografyabtn"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/cografya1" />
  </LinearLayout>

  <TextView
      android:id="@+id/bilimskor"
      android:layout_width="wrap_content"
      android:layout_height="20dp"
      android:layout_below="@id/layout1"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="3dp"
      android:text="Skor"
      android:textColor="#ffffff"></TextView>

  <TextView
      android:id="@+id/cografyaskor"
      android:layout_width="wrap_content"
      android:layout_height="20dp"
      android:layout_below="@id/layout1"
      android:layout_marginLeft="210dp"
      android:layout_marginTop="3dp"
      android:text="Skor"
      android:textColor="#ffffff"></TextView>

  <LinearLayout
      android:id="@+id/layout2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/layout1"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="20dp"
      android:orientation="horizontal">


    <ImageButton
        android:id="@+id/sporbtn"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/spor1" />

    <ImageButton
        android:id="@+id/tarihbtn"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/tarih1" />

  </LinearLayout>

  <TextView
      android:id="@+id/sporskor"
      android:layout_width="wrap_content"
      android:layout_height="20dp"
      android:layout_below="@id/layout2"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="3dp"
      android:text="Skor"
      android:textColor="#ffffff"></TextView>

  <TextView
      android:id="@+id/tarihskor"
      android:layout_width="wrap_content"
      android:layout_height="20dp"
      android:layout_below="@id/layout2"
      android:layout_marginLeft="210dp"
      android:layout_marginTop="3dp"
      android:text="Skor"
      android:textColor="#ffffff"></TextView>

  <TextView
      android:id="@+id/hosgeldin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/layout2"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="40dp"
      android:text="HOŞGELDİN"
      android:textColor="#ffffff"
      android:textSize="12sp"></TextView>

  <TextView
      android:id="@+id/kullaniciadi"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/hosgeldin"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="5dp"
      android:text="kullanıcı"
      android:textColor="#ffffff"
      android:textSize="16sp"></TextView>

  <ImageView
      android:id="@+id/kadi_duzenle"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_alignBottom="@id/kullaniciadi"
      android:layout_marginStart="20dp"
      android:layout_marginLeft="13dp"
      android:layout_marginBottom="32dp"
      android:layout_toEndOf="@id/kullaniciadi"
      android:src="@drawable/ic_action_kullaniciadi"></ImageView>


</RelativeLayout>